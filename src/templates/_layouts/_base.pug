include ../_mixins/_import

block vars
	-
		var title = typeof title !== 'undefined' ? title : null
	-
		var html = {
			attrs: {
				lang: 'ru'
			},
			classList: []
		}
	-
		var body = {
			attrs: {},
			classList: []
		}
	-
		var cartEmpty = true
	-
		var isAuth = false

doctype html
html(class=html.classList)&attributes(html.attrs)
	head
		meta(charset="utf-8")

		if title !== null
			title= title

		include ../_parts/_head

	body(class=body.classList)&attributes(body.attrs)

		include ../_parts/_header

		if isEnter===true

			main.main
				include ../create-profile

		else

			main.main
				.page
					.container
						.row
							.col-md-3.sidebar.sidebar_left
								include ../_parts/_sidebar_l

							if psotDetail == true
								if withoutRightSide == true
									.col-lg-8.col-md-9.col-12.content
										block content
								else
									.col-lg-6.col-md-9.col-12.content
										block content
							else
								if withoutRightSide == true
									if withoutRightSideSmall == true
										.col-lg-6.col-md-9.col-12.content
											block content
									else if userRules == true
										.col-lg-8.col-md-9.col-12
											block content
									else
										.col-lg-8.col-md-9.col-12.content
											block content
								else
									.col-lg-6.col-md-9.col-12.content
										block content

							if withoutRightSide == true

							else
								.col-lg-3.sidebar.sidebar_right
									include ../_parts/_sidebar_r

			include ../_parts/_footer
			include ../_parts/_modals


		block scripts
			script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js', integrity='sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj', crossorigin='anonymous')
			script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js', integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo', crossorigin='anonymous')
			script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js', integrity='sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI', crossorigin='anonymous')

			script(src=`js/vendor.js?v=${Date.now()}`)
			script(src=`js/main.js?v=${Date.now()}`)
