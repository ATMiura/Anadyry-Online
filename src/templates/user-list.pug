extends _layouts/_base

append vars
	-
		var title = 'Список пользователей'
		var isAuth = true

block content
	.wall
		.title
			h1 Список пользователей


		.tag_filter
			.tag_filter__item.active
				a(href="#") Все
			.tag_filter__item
				a(href="#") Публикация
			.tag_filter__item
				a(href="#") Опрос
			.tag_filter__item
				a(href="#") Альбом
			.tag_filter__item
				a(href="#") Видео
			.tag_filter__item
				a(href="#") Событие

		.dropdown(data-dropdown="select")
			input(type="hidden", value="", class="dropdown__value")
			.dropdown__label
				.dropdown__label__text По просмотрам за неделю
			ul.dropdown__list
				li.dropdown__item.active(data-value="За месяц") За месяц
				li.dropdown__item(data-value="За год") За год
				li.dropdown__item(data-value="За день") За день

		form.form
			.form-row
				.form-group
					input#user__search.form-control.inp-search.form_field(type='text', placeholder='Найти пользователя')

		.form-result
