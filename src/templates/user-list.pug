			.user-card
				.user-card__header
					.user
						.user-avatar
							.user-avatar-photo
								img(src='/images/face_1.png')
							.user-status.is-offline
						.user-info
							.user-name
								h3 Дмитрий Иванов
								.user-role.user-role__new Новый

							.user-tag @sergeybabkin
							.user-follow
								.btn.btn-small + Подписаться
								.btn.btn-small Сообщение
						.user-dots.dots(data-tooltip='dots')
							+icon('dots_v')
				.user-card__footer
					.user-actions
						.user-actions__list
							.user-actions__item
								.user-actions__item__icon
									+icon('user-actions-icon-star')
								.user-actions__item__text 1394 рейтинг
							.user-actions__item
