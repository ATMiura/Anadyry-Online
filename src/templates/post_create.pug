extends _layouts/_base

append vars
	-
		var title = 'Создание поста'
		var isAuth = true
		var psotDetail = true

block content
	.wall.post-create

		.post-type
			.post-type__item
				form.form.post-create-form
					.title
						h1.h1 Новый пост (Публикация)
					.dropdown(data-dropdown="select")
						input(type="hidden", value="", class="dropdown__value")
						.dropdown__name Тип поста
						.dropdown__label
							.dropdown__label__text Выбирите тип поста
						ul.dropdown__list
							li.dropdown__item.active(data-value="Публикация") Публикация
							li.dropdown__item(data-value="Альбом") Альбом
							li.dropdown__item(data-value="Видео") Видео
							li.dropdown__item(data-value="Опрос") Опрос
							li.dropdown__item(data-value="События") События
					.form-row
						.form-group.col-12
							label(for='post-create-form-title') Заголовк поста
							input#post-create-form-title.form-control(type='text')

					.form-row.file-upload
						.form-group.col-md-6.col-12
							.file-upload-list
								.file-upload-list__item
									img(src="/images/file-upload-default.jpg").img-fluid
									.file-upload__remove
										+icon('trash-basket')

						.form-group.col-md-6.col-12
							.form-heading(for='post-create-form-img') Изображение на обложку
							.file-upload__small.form-text.text-muted Оптимальный размер изображения 800 x 600px и размером до 50 Мb
							label.file-upload__label
								input#post-create-form-img.file-upload__input(type='file')
								button.btn.btn-dark.btn-file Загрузить файл

					.form-row
						.form-group.col-12
							label(for='post-create-form-meta-title') Мета заголовок
							input#post-create-form-meta-title.form-control(type='text')

					.form-row
						.form-group.col-12
							label(for='post-create-form-meta-descr') Мета описание
							textarea#post-create-form-meta-descr.form-control

					.form-row
						.form-group.col-md-6.col-12
							label(for='post-create-form-date-finish') Окончание публикации
							input#post-create-form-date-finish.form-control(type='date')
						.form-group.col-md-6.col-12
							label(for='post-create-form-date-start') Начало публикации
							input#post-create-form-date-start.form-control(type='date')
						.form-group.col-12
							.custom-control.custom-checkbox
								input#post-create-comments-allow.custom-control-input(type='checkbox')
								label.custom-control-label(for='post-create-comments-allow') Разрешить комментарии

					.form-row
						.form-group.col-12
							label(for='post-create-form-text') Текст поста
							textarea#post-create-form-text.form-control

					.form-row
						.form-group.col-12
							label(for='post-create-form-tag-list') Список тегов
							input#post-create-form-tag-list.form-control(type='text')

					.form-row
						.form-group.col-12
							label(for='post-create-form-source') Источник
							input#post-create-form-source.form-control(type='text')

					.form-row
						.form-group.col-12
							.form__heading Связать посты
							label(for='post-create-link-articles') Заголовок поста
							input#post-create-link-articles.form-control(type='text')
							button.btn.btn-small Связать посты
						.form-group.col-12.d-flex.justify-content-end
							button.btn.btn-dark Черновик
							button.btn.btn-primary На проверку

			.post-type__item
				form.form.post-create-form
					.title
						h1.h1 Новый пост (Альбом)
					.dropdown(data-dropdown="select")
						input(type="hidden", value="", class="dropdown__value")
						.dropdown__name Тип поста
						.dropdown__label
							.dropdown__label__text Выбирите тип поста
						ul.dropdown__list
							li.dropdown__item.active(data-value="Публикация") Публикация
							li.dropdown__item(data-value="Альбом") Альбом
							li.dropdown__item(data-value="Видео") Видео
							li.dropdown__item(data-value="Опрос") Опрос
							li.dropdown__item(data-value="События") События
					.form-row
						.form-group.col-12
							label(for='post-create-form-title') Заголовк поста
							input#post-create-form-title.form-control(type='text')

					.form-row.file-upload
						.form-group.col-12
							.file-upload-list.row
								.file-upload-list__item.col-md-3
									img(src="/images/file-upload-default.jpg").img-fluid
									.file-upload__remove
										+icon('trash-basket')
								.file-upload-list__item.col-md-3
									img(src="/images/file-upload-default.jpg").img-fluid
									.file-upload__remove
										+icon('trash-basket')
								.file-upload-list__item.col-md-3
									img(src="/images/file-upload-default.jpg").img-fluid
									.file-upload__remove
										+icon('trash-basket')

						.form-group.col-12
							label.file-upload__label.file-upload__label__multi(for="post-create-form-multi")
								input#post-create-form-multi.file-upload__input(type='file')
								| Кликните, чтобы добавить фото или перетащите фото сюда


			.post-type__item
				form.form.post-create-form
